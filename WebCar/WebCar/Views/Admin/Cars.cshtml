@model List<WebCar.Models.CAR>

@{
    ViewBag.Title = "Quản lý xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold">
                <i class="fas fa-car text-primary me-2"></i>Quản lý xe
            </h2>
            <p class="text-muted">Tổng số: <strong>@Model.Count</strong> xe</p>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Thêm xe mới
            </a>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            @using (Html.BeginForm("Cars", "Admin", FormMethod.Get, new { @class = "row g-3" }))
            {
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="search" class="form-control"
                               placeholder="Tìm theo tên xe, hãng..."
                               value="@ViewBag.SearchTerm" />
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- Cars Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 80px">Mã xe</th>
                            <th style="width: 100px">Hình ảnh</th>
                            <th>Tên xe</th>
                            <th>Hãng</th>
                            <th>Giá</th>
                            <th>Năm SX</th>
                            <th style="width: 120px">Trạng thái</th>
                            <th style="width: 150px" class="text-center">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var car in Model)
                            {
                                <tr>
                                    <td class="fw-bold">#@car.MAXE</td>

                                    <td>
                                        <img src="@Url.Content("~/" + car.HINHANH)"
                                             alt="@car.TENXE"
                                             class="img-thumbnail"
                                             style="width: 80px; height: 60px; object-fit: cover;"
                                             onerror="this.src='@Url.Content("~/Content/images/no-image.jpg")'" />
                                    </td>

                                    <td>
                                        <strong>@car.TENXE</strong>
                                        @if (!string.IsNullOrEmpty(car.MOTA) && car.MOTA.Length > 50)
                                        {
                                            <br />
                                            <small class="text-muted">@car.MOTA.Substring(0, 50)...</small>
                                        }
                                    </td>

                                    <td>
                                        <span class="badge bg-info">@car.HANGXE</span>
                                    </td>

                                    <td class="text-danger fw-bold">
                                        @string.Format("{0:N0}", car.GIA ?? 0) đ
                                    </td>

                                    <td>@car.NAMSX</td>

                                    <td>
                                        @if (car.TRANGTHAI == "Còn hàng")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Còn hàng
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle"></i> Hết hàng
                                            </span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">

                                            <a href="@Url.Action("Details", "Product", new { id = car.MAXE })"
                                               class="btn btn-outline-info"
                                               title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <a href="@Url.Action("Edit", "Product", new { id = car.MAXE })"
                                               class="btn btn-outline-primary"
                                               title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <button type="button"
                                                    class="btn btn-outline-danger"
                                                    onclick="confirmDelete(@car.MAXE, '@car.TENXE')"
                                                    title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3 d-block"></i>
                                    <p class="text-muted">Không có dữ liệu</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav>
                    <ul class="pagination pagination-sm justify-content-center mb-0">

                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               href="@Url.Action("Cars", new { search = ViewBag.SearchTerm, page = ViewBag.CurrentPage - 1 })">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   href="@Url.Action("Cars", new { search = ViewBag.SearchTerm, page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               href="@Url.Action("Cars", new { search = ViewBag.SearchTerm, page = ViewBag.CurrentPage + 1 })">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(carId, carName) {
            if (confirm(`Bạn có chắc muốn xóa xe "${carName}"?`)) {
                alert('Chức năng xóa sẽ được implement sau!');
            }
        }
    </script>
}

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}
