        <button type="button" data-bs-target="#vinfastBanner" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#vinfastBanner" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#vinfastBanner" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#vinfastBanner" data-bs-slide-to="3"></button>
    </div>

    <!-- Ảnh banner -->
    <div class="carousel-inner" style="height:100vh;">
        <div class="carousel-item active" style="height:100vh;">
            <img src="~/images/banner1.png" class="d-block w-100" style="height:100vh; object-fit:cover;" alt="Banner 1" />
        </div>
        <div class="carousel-item" style="height:100vh;">
            <img src="~/images/banner2.jpg" class="d-block w-100" style="height:100vh; object-fit:cover;" alt="Banner 2" />
        </div>
        <div class="carousel-item" style="height:100vh;">
            <img src="~/images/banner3.jpg" class="d-block w-100" style="height:100vh; object-fit:cover;" alt="Banner 3" />
        </div>
        <div class="carousel-item" style="height:100vh;">
            <img src="~/images/banner4.jpg" class="d-block w-100" style="height:100vh; object-fit:cover;" alt="Banner 4" />
        </div>
    </div>

    <!-- Nút chuyển trái/phải -->
    <button class="carousel-control-prev" type="button" data-bs-target="#vinfastBanner" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#vinfastBanner" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

