@model List<WebCar.Models.AUDIT_LOG>

@{
    ViewBag.Title = "Lịch sử hoạt động";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-activity-page">
    <div class="container py-5">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h2 class="fw-bold mb-2">
                    <i class="fas fa-history text-primary me-2"></i>
                    Lịch sử hoạt động của tôi
                </h2>
                <p class="text-muted mb-0">
                    Theo dõi tất cả hoạt động của bạn trên hệ thống
                </p>
            </div>
            <div class="col-md-4 text-end">
                <a href="@Url.Action("MyProfile")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
                <button class="btn btn-primary" onclick="exportMyActivity()">
                    <i class="fas fa-download me-2"></i>Xuất file
                </button>
            </div>
        </div>

        <!-- Statistics -->
        <div class="row g-4 mb-4">
            <div class="col-lg-3 col-md-6">
                <div class="activity-stat stat-primary">
                    <div class="stat-icon">
                        <i class="fas fa-list"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@ViewBag.TotalLogs</h3>
                        <p>Tổng hoạt động</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="activity-stat stat-success">
                    <div class="stat-icon">
                        <i class="fas fa-sign-in-alt"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Count(x => x.HANHDONG.Contains("LOGIN"))</h3>
                        <p>Lần đăng nhập</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="activity-stat stat-info">
                    <div class="stat-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model. Count(x => x.HANHDONG.Contains("ORDER") || x.BANGTACDONG == "ORDERS")</h3>
                        <p>Đơn hàng</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="activity-stat stat-warning">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="stat-content">
                        <h3>
                            @if (Model.Any())
                            {
                                var days = (DateTime.Now - Model.Min(x => x.NGAYGIO ?? DateTime.Now)).Days;
                                @days
                            }
                            else
                            {
                                <text>0</text>
                            }
                        </h3>
                        <p>Ngày hoạt động</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Timeline -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card modern-card">
                    <div class="card-header bg-transparent border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-stream text-primary me-2"></i>
                            Timeline hoạt động
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model != null && Model.Any())
                        {
                            <div class="activity-timeline">
                                @foreach (var log in Model)
                                {
                                    var iconClass = log.ActionIcon;
                                    var badgeClass = log.StatusBadgeClass.Replace("badge ", "");

                                    <div class="timeline-item">
                                        <div class="timeline-marker">
                                            <i class="@iconClass"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <div class="timeline-header">
                                                <span class="@badgeClass">@log. HANHDONG</span>
                                                <small class="text-muted ms-2">
                                                    <i class="fas fa-clock me-1"></i>@log.TimeAgo
                                                </small>
                                            </div>
                                            <p class="timeline-text mb-1">
                                                @if (!string.IsNullOrEmpty(log.BANGTACDONG))
                                                {
                                                    <span>Tác động: <strong>@log.BANGTACDONG</strong></span>
                                                }
                                            </p>
                                            <div class="timeline-meta">
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>@log. FormattedDate
                                                </small>
                                                @if (!string.IsNullOrEmpty(log.IP))
                                                {
                                                    <small class="text-muted ms-3">
                                                        <i class="fas fa-network-wired me-1"></i>
                                                        <code>@log.IP</code>
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Pagination -->
                            if (ViewBag.TotalPages > 1)
                            {
                                <nav class="mt-4">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" href="@Url.Action("MyActivity", new { page = ViewBag.CurrentPage - 1 })">
                                                <i class="fas fa-chevron-left"></i>
                                            </a>
                                        </li>

                                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                        {
                                            <li class="page-item @(i == ViewBag.CurrentPage ?  "active" : "")">
                                                <a class="page-link" href="@Url.Action("MyActivity", new { page = i })">@i</a>
                                            </li>
                                        }

                                        <li class="page-item @(ViewBag.CurrentPage == ViewBag. TotalPages ? "disabled" : "")">
                                            <a class="page-link" href="@Url.Action("MyActivity", new { page = ViewBag.CurrentPage + 1 })">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-inbox fa-3x text-muted mb-3 d-block"></i>
                                <p class="text-muted">Chưa có hoạt động nào</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Recent Logins -->
            <div class="col-lg-4">
                <div class="card modern-card mb-4">
                    <div class="card-header bg-transparent border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-sign-in-alt text-success me-2"></i>
                            Đăng nhập gần đây
                        </h5>
                    </div>
                    <div class="card-body">
                        @{
                            var recentLogins = Model.Where(x => x.HANHDONG.Contains("LOGIN") || x.HANHDONG.Contains("LOGOUT")).Take(5);
                        }

                        @if (recentLogins.Any())
                        {
                            <div class="login-history">
                                @foreach (var login in recentLogins)
                                {
                                    var isLogin = login.HANHDONG.Contains("LOGIN");
                                    <div class="login-item">
                                        <div class="login-icon @(isLogin ? "bg-success" : "bg-warning")">
                                            <i class="fas @(isLogin ? "fa-sign-in-alt" : "fa-sign-out-alt")"></i>
                                        </div>
                                        <div class="login-details">
                                            <strong>@login.HANHDONG</strong>
                                            <br />
                                            <small class="text-muted">@login.FormattedDate</small>
                                            <br />
                                            <code class="small">@login.IP</code>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted small">Không có lịch sử đăng nhập</p>
                        }
                    </div>
                </div>

                <!-- Security Tips -->
                <div class="card modern-card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-shield-alt me-2"></i>Mẹo bảo mật
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Kiểm tra IP đăng nhập thường xuyên</small>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Đổi mật khẩu định kỳ</small>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Không chia sẻ tài khoản</small>
                            </li>
                            <li class="mb-0">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small>Đăng xuất sau khi sử dụng</small>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .my-activity-page {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .modern-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .modern-card:hover {
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        /* Activity Stats */
        .activity-stat {
            background: white;
            border-radius: 15px;
            padding: 25px;
            display: flex;
            align-items: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            border-left: 4px solid;
        }

        .activity-stat:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .stat-primary { border-left-color: #0d6efd; }
        .stat-success { border-left-color: #198754; }
        .stat-info { border-left-color: #0dcaf0; }
        . stat-warning { border-left-color: #ffc107; }

        .activity-stat .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            margin-right: 20px;
        }

        . stat-primary .stat-icon {
            background: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
        }

        .stat-success .stat-icon {
            background: rgba(25, 135, 84, 0.1);
            color: #198754;
        }

        .stat-info .stat-icon {
            background: rgba(13, 202, 240, 0.1);
            color: #0dcaf0;
        }

        .stat-warning .stat-icon {
            background: rgba(255, 193, 7, 0.1);
            color: #ffc107;
        }

        .stat-content h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
            line-height: 1;
        }

        .stat-content p {
            margin: 0;
            color: #6c757d;
            font-size: 0.875rem;
        }

        /* Activity Timeline */
        .activity-timeline {
            position: relative;
            padding-left: 30px;
        }

        . activity-timeline::before {
            content: '';
            position: absolute;
            left: 11px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
        }

        .timeline-item {
            position: relative;
            margin-bottom: 30px;
            padding-left: 30px;
        }

        .timeline-item:last-child {
            margin-bottom: 0;
        }

        .timeline-marker {
            position: absolute;
            left: -30px;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background: white;
            border: 3px solid #667eea;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            color: #667eea;
            z-index: 1;
        }

        .timeline-content {
            background: white;
            border-radius: 12px;
            padding: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }

        .timeline-content:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.15);
            transform: translateX(5px);
        }

        . timeline-header {
            margin-bottom: 10px;
        }

        .timeline-text {
            font-size: 0.9rem;
            color: #495057;
        }

        .timeline-meta {
            font-size: 0.8rem;
        }

        /* Login History */
        .login-history {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        . login-item {
            display: flex;
            align-items: center;
            padding: 12px;
            background: #f8f9fa;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .login-item:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .login-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: white;
        }

        .login-details {
            flex: 1;
        }


        .activity-stat {
            animation: fadeInUp 0.6s ease forwards;
        }

        .activity-stat:nth-child(1) { animation-delay: 0.1s; }
        .activity-stat:nth-child(2) { animation-delay: 0.2s; }
        .activity-stat:nth-child(3) { animation-delay: 0. 3s; }
        .activity-stat:nth-child(4) { animation-delay: 0.4s; }

        .timeline-item {
            animation: fadeInUp 0.6s ease forwards;
        }
    </style>
}

